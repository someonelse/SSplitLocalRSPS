{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Server",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p Server/bin && javac -cp 'Server/deps/*' -d Server/bin $(find Server/src -name '*.java')"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Server",
      "type": "shell",
      "dependsOn": "Build Server",
      "command": "bash",
      "args": [
        "-c",
        "java -cp 'Server/bin:Server/deps/*' server.Server"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build Client",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p Client/bin && javac -cp 'Client/deps/*' -d Client/bin $(find Client/src -name '*.java')"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Client",
      "type": "shell",
      "dependsOn": "Build Client",
      "command": "bash",
      "args": [
        "-c",
        "java -cp 'Client/bin:Client/deps/*' client.client"
      ],
      "problemMatcher": []
    }
  ]
}
